<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="motionstudioMobile.Inquiries">

    <VerticalStackLayout>
        <!--<Image
        Source="motion.png"                
        Aspect="Center"
        SemanticProperties.Description="Logo" />-->
        <Label Text="Inquiries"></Label>
        <Label Text="lorem ispum small description about this section"></Label>
        <Entry
        Placeholder="Name"
        HorizontalOptions="Fill"/>
        <Entry
        Placeholder="Email"
        HorizontalOptions="Fill"/>
        <Entry
        Placeholder="Phone Number"
        HorizontalOptions="Fill"/>
        <Entry
        Placeholder="Message"
        HorizontalOptions="FillAndExpand"/>

        <!-- Display the result of the inquiry here -->
        <Label Text="{Binding InquiryResult}" />
        <!-- Trigger the inquiry request -->
        <Button Text="Submit" Clicked="OnMakeInquiryClicked" />
    </VerticalStackLayout>

</ContentPage>